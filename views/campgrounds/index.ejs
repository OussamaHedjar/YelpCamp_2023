<% layout("layouts/boilerplate") %>

<div id="cluster-map"></div>
<h1>All Campgrounds</h1>
<div class="d-grid gap-2 mb-3">
    <a href="/campgrounds/new" class="btn btn-primary" >Add A Campground</a>
</div>

<%for (let campground of campgrounds) {%> 
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if (campground.images.length) { %>
                    <img class="card-img-top" src="<%= campground.images[0].url %>" alt="">
                <% } else {%>
                    <img class="card-img-top" src="https://res.cloudinary.com/dmpqyxuna/image/upload/v1701531494/YelpCamp/rgojesmp1ktmky2xvyqq.jpg" alt="">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.title %></h5>
                    <p class="card-text"><%= campground.description %></p>
                    <p class="card-text">
                        <small class="text-body-secondary"><%= campground.location %></small>
                    </p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View <%= campground.title %></a>
                </div>
            </div>
        </div>
    </div>
<% } %>

<script> 
    const mapToken = "<%- process.env.MAPBOX_TOKEN %>" ;
    const campgrounds = {features: <%-JSON.stringify(campgrounds)%>};
</script>
    
<script src="/javascripts/clusterMap.js"></script>